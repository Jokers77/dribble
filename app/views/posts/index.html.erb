<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header animated bounceInLeft">Les oeuvres</h1>
    </div>
<% @posts.each do |post| %>
    <div class="col-lg-3 col-md-4 col-xs-6 thumb animated bounce">
      <h3><%= link_to post.title, post %></h3>
        <%= link_to post, class: "thumbnail" do %>
          <%= image_tag post.image.url, class: "img-responsive hvr-grow" %>
        <% end %>
        <div class="panel-footer text-center">
            <%= post.get_likes.size %>  J'aime
            <span class="glyphicon glyphicon-thumbs-up"></span>
            -
            <%= post.get_dislikes.size %>  N'aime pas
            <span class="glyphicon glyphicon-thumbs-down"></span>
            <p>
            <%= link_to post, class: "link-comment" do %>
              <%= post.comments.count %> Commentaires
            <% end %>
            </p>
        </div>

        <br>

    </div>
<% end %>

</div>

<%= paginate @posts %>
<br>

<% if current_user %>
  <%= link_to "Ajouter une oeuvre", new_post_path, { class: "btn-oeuvre hvr-shutter-in-horizontal" } %>
<% end %>
