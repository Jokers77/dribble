<h1>
  <%= @post.title %>
</h1>
<p>
  <%= image_tag @post.image.url, class: "animated flip img-responsive col-lg-3 col-md-4 col-xs-6" %>
</p>

<div class="vote-left col-lg-3 col-md-4 col-xs-6">
  <p><%= @post.get_upvotes.size %> J'aime</p>
  <p><%= @post.get_downvotes.size %> N'aime pas</p>
</div>

<%= link_to root_path do %>
  <span class="glyphicon glyphicon-arrow-left"></span> Retour
<% end %>

<hr>
<p>
  <%= @post.link %>
</p>
<p>
  <%= @post.description %>
</p>
<p>
  Auteur : <%= @post.user.name %>
</p>


<%= link_to "J'aime", like_post_path(@post), method: :get %>
<%= link_to "Je n'aime pas", dislike_post_path(@post), method: :get %>

<div id="comment">
  <h3 class="comment_count"><%= pluralize(@post.comments.count, "commentaire") %></h3>
      <% @comments.each do |comment| %>
        <div class="comment">
          <p><strong><%= comment.user.name %></strong></p>
          <p class="comment-left"><%= comment.content %></p>
        </div>
      <% end %>
</div>

<hr>

<% if current_user %>
  <%= render 'comments/form' %>
<% else %>
  <p>
    Veuillez-vous logger pour poster un commentaire.
  </p>
<% end %>
<br>

<% if current_user %>
  <%= link_to 'Modifier', edit_post_path(@post) %>
  <%= link_to 'Supprimer', post_path(@post), method: :delete, data: { confirm: "Etes-vous sur ?" } %>
<% end %>
<br>
